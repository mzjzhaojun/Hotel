  </insert>
  
 <delete id="deleteByIds" parameterType="java.util.List">
     delete from ht_role where rowid in 
        <foreach collection="array" index="index" item="item" open="("
          separator="," close=")">
           #{item}
        </foreach>
 </delete>
 <update id="update" parameterType="com.yichuang.kyjd.rest.entity.role.Role">
    update ht_role
         <set>
             <if test="rowid != null">
                   rowid = #{rowid},
             </if>
             <if test="role_code != null">
                   role_code = #{role_code},
             </if>
             <if test="role_name != null">
                   role_name = #{role_name},
             </if>
             <if test="sys_create_time != null">
                   sys_create_time = #{sys_create_time},
             </if>
             <if test="remarks != null">
                   remarks = #{remarks}
             </if>
          </set>
     where rowid = #{rowid}
 </update>
 <select id="getById" parameterType="java.lang.String" resultMap="ResultMap">
     select
        <include refid="Base_Column_List" />
        from ht_role 
        where rowid = #{rowid}
 </select>
 <select id="getList" parameterType="com.yichuang.kyjd.rest.entity.role.Role" resultMap="ResultMap">
       select
        <include refid="Base_Column_List" />
        from ht_role 
        <where>
             <if test="role_name != null and role_name != ''">
           		role_name like "%"#{role_name}"%"
             </if>
        </where>
 </select>
 <select id="getPage" parameterType="com.yichuang.kyjd.rest.entity.role.Role" resultMap="ResultMap">
      select
       <include refid="Base_Column_List" />
        from ht_role 
       <where>
             <if test="role_name != null and role_name != ''">
         		  role_name like "%"#{role_name}"%"
             </if>
       </where>
       LIMIT #{pageStart},#{pageEnd}
 </select>
 <select id="getCount" parameterType="com.yichuang.kyjd.rest.entity.role.Role" resultType="int">
       select count(*) from ht_role 
         <where>
             <if test="role_name != null and role_name != ''">
                role_name like "%"#{role_name}"%"
             </if>
         </where>
 </select>
 <select id="selectRole" parameterType="com.yichuang.kyjd.rest.entity.role.Role" resultType="java.util.HashMap">
       select
        <include refid="Base_Column_List" />
        from ht_role 
        <where>
             <if test="role_name != null and role_name != ''">
           		role_name like "%"#{role_name}"%"
             </if>
        </where>
 </select>
 
 <select id="getRoleName" parameterType="com.yichuang.kyjd.rest.entity.role.Role" resultMap="ResultMap">
      select
        <include refid="Base_Column_List" />
        from ht_role 
        where role_name = #{role_name}
 </select>
 
  <select id="getRoleByRoleCode" parameterType="com.yichuang.kyjd.rest.entity.role.Role" resultMap="ResultMap">
  		SELECT r.* FROM ht_user AS u
		INNER JOIN ht_user_role as ur ON  u.USER_CODE=ur.USER_CODE
		INNER JOIN ht_role AS r  ON r.ROLE_CODE=ur.ROLE_CODE
		WHERE u.USER_CODE= #{user_code}
 </select>
 
