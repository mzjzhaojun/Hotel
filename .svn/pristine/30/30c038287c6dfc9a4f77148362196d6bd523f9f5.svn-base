<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Role_module">
	<sql id="Base_Column_List">
		rowid,role_code,module_code,remarks
	</sql>
	<resultMap id="ResultMap"
		type="com.yichuang.kyjd.rest.entity.role_module.Role_module">
		<id property="rowid" column="rowid" />
		<id property="role_code" column="role_code" />
		<id property="module_code" column="module_code" />
		<id property="remarks" column="remarks" />
	</resultMap>
	
	<resultMap id="ResultMap2"
		type="com.yichuang.kyjd.rest.entity.role_module.Menu">
		<id property="user_code" column="user_code" />
		<id property="role_code" column="role_code" />
		<id property="module_code" column="module_code" />
		<id property="role_name" column="role_name" />
		<id property="url" column="url" />
		<id property="module_name" column="module_name" />
	</resultMap>
	<resultMap id="ResultMap3"
		type="com.yichuang.kyjd.rest.entity.module.Module">
		<id property="module_code" column="module_code" />
		<id property="url" column="url" />
		<id property="module_name" column="module_name" />
	</resultMap>
	
	
	<insert id="save" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module">
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
		insert into ht_role_module (role_code,module_code,remarks)
		values
		(#{role_code},#{module_code},#{remarks})
	</insert>
	<delete id="deleteByIds" parameterType="java.util.List">
		delete from ht_role_module where id in
		<foreach collection="array" index="index" item="item" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>
	<update id="update" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module">
		update ht_role_module
		<set>
			<if test="rowid != null">
				rowid = #{rowid},
			</if>
			<if test="role_code != null">
				role_code = #{role_code},
			</if>
			<if test="module_code != null">
				module_code = #{module_code},
			</if>
			<if test="remarks != null">
				remarks = #{remarks}
			</if>
		</set>
		where id = #{id}
	</update>
	<select id="getById" parameterType="java.lang.String" resultMap="ResultMap">
		select
		<include refid="Base_Column_List" />
		from ht_role_module
		where id = #{id}
	</select>
	<select id="getList" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module"
		resultMap="ResultMap">
		select
		<include refid="Base_Column_List" />
		from ht_role_module
		<where>
			<if test="name != null and name != ''">
				name like "%"#{name}"%"
			</if>
		</where>
	</select>
	<select id="getPage" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module"
		resultMap="ResultMap">
		select
		<include refid="Base_Column_List" />
		from ht_role_module
		<where>
			<if test="name != null and name != ''">
				name like "%"#{name}"%"
			</if>
		</where>
		LIMIT #{pageStart},#{pageEnd}
	</select>
	<select id="getCount" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module"
		resultType="int">
		select count(*) from ht_role_module
		<where>
			<if test="name != null and name != ''">
				name like "%"#{name}"%"
			</if>
		</where>
	</select>
	<select id="selectModuleCode" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module"
		resultMap="ResultMap2">
		SELECT
		ur.user_code,ur.role_code,r.role_name,m.module_code,m.module_name,m.url
		FROM ht_user_role ur
		LEFT JOIN ht_role r ON ur.role_code = r.role_code
		LEFT JOIN ht_role_module rm ON r.role_code = rm.role_code
		LEFT JOIN ht_module m ON rm.module_code = m.module_code
		WHERE ur.role_code = #{role_code} AND m.level = 1
	</select>


	<select id="selectParentModuleCode" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module"
		resultMap="ResultMap2">
		SELECT * FROM ht_user_role ur
		LEFT JOIN ht_role r ON
		ur.role_code = r.role_code
		LEFT JOIN ht_role_module rm ON r.role_code =
		rm.role_code
		LEFT JOIN ht_module m ON rm.module_code = m.module_code
		WHERE rm.ROLE_CODE = #{role_code} AND m.PARENT_MODULE_CODE = #{module_code}
	</select>
	
	<select id="selectModuleCodeByRoleCode" parameterType="com.yichuang.kyjd.rest.entity.role_module.Role_module"
		resultMap="ResultMap3">
		SELECT m.MODULE_CODE,m.MODULE_NAME,m.PARENT_MODULE_CODE FROM ht_role AS r 
		INNER JOIN ht_role_module rm ON r.ROLE_CODE =rm.ROLE_CODE
		INNER JOIN ht_module AS m  ON rm.MODULE_CODE=m.MODULE_CODE
		<where>
			<if test="role_code != null and role_code != ''">
				r.role_code = #{role_code}
			</if>
		</where>
	</select>
	<delete id="deleteByRoleCode" parameterType="java.lang.String">
		delete from ht_role_module where role_code =#{roleCode}
	</delete>
</mapper>