<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Role">
  <sql id="Base_Column_List">
     rowid,role_code,role_name,sys_create_time,remarks
  </sql>
  <resultMap id="ResultMap" type="com.yaao.app.system.entity.role.Role">
         <id property="rowid" column="rowid" />
         <id property="role_code" column="role_code" />
         <id property="role_name" column="role_name" />
         <id property="sys_create_time" column="sys_create_time" />
         <id property="remarks" column="remarks" />
  </resultMap>
  <insert id="save" parameterType="com.yaao.app.system.entity.role.Role">
  <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
  	SELECT LAST_INSERT_ID() AS id 
  </selectKey>
  insert into ht_role (role_code,role_name,sys_create_time,remarks)
         values (#{role_code},#{role_name},#{sys_create_time},#{remarks})
  </insert>
 <delete id="deleteByIds" parameterType="java.util.List">
     delete from ht_role where id in 
        <foreach collection="array" index="index" item="item" open="("
          separator="," close=")">
           #{item}
        </foreach>
 </delete>
 <update id="update" parameterType="com.yaao.app.system.entity.role.Role">
    update ht_role
         <set>
             <if test="rowid != null">
                   rowid = #{rowid},
             </if>
             <if test="role_code != null">
                   role_code = #{role_code},
             </if>
             <if test="role_name != null">
                   role_name = #{role_name},
             </if>
             <if test="sys_create_time != null">
                   sys_create_time = #{sys_create_time},
             </if>
             <if test="remarks != null">
                   remarks = #{remarks}
             </if>
          </set>
     where id = #{id}
 </update>
 <select id="getById" parameterType="java.lang.String" resultMap="ResultMap">
     select
        <include refid="Base_Column_List" />
        from ht_role 
        where id = #{id}
 </select>
 <select id="getList" parameterType="com.yaao.app.system.entity.role.Role" resultMap="ResultMap">
       select
        <include refid="Base_Column_List" />
        from ht_role 
        <where>
             <if test="name != null and name != ''">
           		name like "%"#{name}"%"
             </if>
        </where>
 </select>
 <select id="getPage" parameterType="com.yaao.app.system.entity.role.Role" resultMap="ResultMap">
      select
       <include refid="Base_Column_List" />
        from ht_role 
       <where>
             <if test="name != null and name != ''">
         		  name like "%"#{name}"%"
             </if>
       </where>
 </select>
 <select id="getCount" parameterType="com.yaao.app.system.entity.role.Role" resultType="int">
       select count(*) from ht_role 
         <where>
             <if test="name != null and name != ''">
                name like "%"#{name}"%"
             </if>
         </where>
 </select>
 <select id="selectRole" parameterType="com.yaao.app.system.entity.role.Role" resultType="java.util.HashMap">
       select
        <include refid="Base_Column_List" />
        from ht_role 
        <where>
             <if test="name != null and name != ''">
           		name like "%"#{name}"%"
             </if>
        </where>
 </select>
</mapper>