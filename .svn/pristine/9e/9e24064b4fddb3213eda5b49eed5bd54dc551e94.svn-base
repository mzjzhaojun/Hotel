<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>hotel</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/classes/rest*.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <filter>
    <filter-name>securityFilter</filter-name>
    <filter-class>com.yichuang.kyjd.commnd.web.SecurityFilter</filter-class>
    <init-param>
      <param-name>Encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>allowUrl</param-name>
      <param-value>{"filter":["/Hotel/*"],"allow":["/Hotel/rest/user/login","/Hotel/data/*","/Hotel/data","/Hotel/rest/customer/register","/Hotel/rest/customer/login","/Hotel/rest/customer/checkCustomer","/Hotel/rest/message/checkaccout","/Hotel/rest/message/sendmsg","/Hotel/rest/room/mobile","/Hotel/rest/dictionaries/type/D__pblt256ysl2e","/Hotel/rest/dictionaries/type/D__sxu9nuxzf1yw","/Hotel/rest/room/upload","/Hotel/rest/customer/getlogincustomer","/Hotel/rest/room/selectDate","/Hotel/rest/customer/retrievePassword","/Hotel/rest/pay/paymoney","/Hotel/rest/pay/callback","/Hotel/rest/pay/notify","/Hotel/rest/restaurant","/Hotel/rest/specialtyinfo","/Hotel/rest/coupon","/Hotel/rest/message/sendcustomer","/Hotel/rest/room/checksurplus"]}</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>rest</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/classes/rest-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>rest</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>SpringCharacterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SpringCharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/classes/log4j.properties</param-value>
  </context-param>
  <servlet>
    <servlet-name>adminProxool</servlet-name>
    <servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>adminProxool</servlet-name>
    <url-pattern>/admin/proxool</url-pattern>
  </servlet-mapping>
</web-app>